<%= render 'shared/breadcrumb', :parent => @parent %>

<%= form_for([:admin, @category]) do |f| %>
  <fieldset>
    <legend></legend>
  <%= render 'shared/error_messages', :target => @category %>

  <div class="clearfix">
    <%= f.label :category_name %><br />
    <div class="input">
      <%= f.text_field :name %>
  </div>
  </div>
  <div class="clearfix">
    <div class="input">
      <%= f.hidden_field :parent_id, :value => @parent.nil? ? 1 : @parent.id %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class=> 'btn primary' %>
  </div>
<% end %>
