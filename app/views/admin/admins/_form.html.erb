<%= form_for([:admin, @admin]) do |f| %>
  <%= render 'shared/error_messages', :target => @admin %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field uneditable-input', :disabled => 'disabled' %>
      <span class="help-block">If you want to change your account email, please contact developer <%= link_to "@gonglexin", "mailto:gonglexin@gmail.com" %></span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :old_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :old_password %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, "New Password", :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div>
    <%= f.submit "Update Password", :class=> 'btn' %>
  </div>
<% end %>
