<%= render 'shared/breadcrumb_product', :page => 'show' %>

<div class="row-fluid">
  <%= image_tag(@product.image.thumb.url) if @product.image? %>
</div>
<br />
<div class="row-fluid">
  <div class="span12">
    <table class="table table-bordered table-striped">
      <!-- 
      <thead>
        <tr>
          <th>#</th>
          <th>#</th>
        </tr>
      <thead>
      -->
      <tbody>
        <tr>
          <td><b>Name</b></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><b>Category</b></td>
          <td><%= @product.category.name %></td>
        </tr>
        <tr>
          <td><b>Description</b></td>
          <td><%= @product.description %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div>
  <%= link_to 'Edit', edit_admin_product_path(@product), :class => "btn" %>
  <%= link_to 'Back', admin_products_path, :class => "btn" %>
</div>
