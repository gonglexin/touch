<% unless notice.nil? %>
  <div class="alert-message success">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>
<p>
  <b>Image:</b>
  <%= image_tag(@product.image_url) if @product.image? %>
</p>


<%= link_to 'Edit', edit_admin_product_path(@product) %> |
<%= link_to 'Back', admin_products_path %>
