<ul class="breadcrumb">
  <li>
    <%= link_to 'Products', admin_products_path %>
    <span class="divider">/<span>
  <li>
</ul>

<table class="bordered-table zebra-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th></th>
      <th></th>
    </tr>
  <thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><a class="image_pop" href='<%= admin_product_path(product) %>' rel="popover" data-content="<img src='<%=product.image.thumb.url%>' class='thumbnail' />" data-original-title="<%= product.name %>"><%= product.name %></a></td>
        <td><%= truncate(product.description, :length => 30) %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @products %>

<%= link_to 'New Product', new_admin_product_path %>
