<!DOCTYPE html>
<html>
<head>
  <title>Touch</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="topbar" data-dropdown="dropdown">
    <div class="topbar-inner">
      <div class="container">
        <h3>
          <%= link_to "Just Elec", root_path %>
        </h3>
        <ul class="nav">
          <li>
            <%= link_to "Home", root_path %>
          </li>
          <li>
            <%= link_to "Products", products_path %>
          </li>
          <li>
            <%= link_to "About", '#' %>
          </li>
          <li>
            <%= link_to "Contact", '#' %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="sidebar">
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </div>

  <footer class="footer">
    <div class="container">
      <p>copyright:blabal</p>
    </div>
  </footer>

</body>
</html>
