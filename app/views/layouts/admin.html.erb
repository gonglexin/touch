<!DOCTYPE html>
<html>
<head>
  <title>Touch - Admin</title>
  <%= stylesheet_link_tag    "admin" %>
  <%= render 'layouts/shim' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

  <header class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
        <%= link_to raw('Just Elec <span class="badge badge-inverse">Admin</span>'), admin_root_path, class: 'brand' %>
				<div class="nav-collapse">
	        <ul class="nav">
	          <li class="active">
	            <%= link_to "Dashboard", admin_products_path %>
	          </li>
	          <li>
	            <%= link_to "Home", root_path, :target => '_blank' %>
	          </li>
	          <li>
	          	<%= link_to raw("#{content_tag(:span, 'Log Out', :class => 'label label-important')}"), admin_logout_path %>
	          </li>
	        </ul>
					<!--
					<p class="navbar-text pull-right"><p>
					-->
				</div>
      </div>
    </div>
  </header>

  <div class="container">
		<div class="row-fluid">
			<div class="span3">
				<div class="well sidebar-nav">
					<ul class="nav nav-list">
						<li class="nav-header">Navigation</li>
	          <li>
	            <%= link_to "Products", admin_products_path %>
	          </li>
	          <li>
	            <%= link_to "Categories", admin_categories_path %>
	          </li>
	          <li>
	            <%= link_to "Setting", admin_setting_path %>
	          </li>
					</ul>
				</div>
			</div>
			<div class="span9">
				<div class="row-fluid">
					<div class="span12">
            <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %>">
                <a class="close" data-dismiss="alert">Ã—</a>
                <%= value %>
              </div>
            <% end %>
			      <%= yield %>
					</div>
				</div>
			</div>
		</div>
		<hr>
		<footer class="footer">
      <p>
        <%= link_to "Back to Top", '#', :class => "pull-right"  %>
      </p>
		  <p>developed by <%= link_to "@gonglexin", "mailto:gonglexin@gmail.com" %></p>
		</footer>
  </div>
</body>
</html>

