<!DOCTYPE html>
<html>
<head>
  <title>Touch - Admin</title>
  <%= stylesheet_link_tag    "admin" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="topbar" data-dropdown="dropdown">
    <div class="topbar-inner">
      <div class="container">
        <h3>
          <%= link_to raw('Just Elec <small>Admin</small>'), admin_root_path %>
        </h3>
        <ul class="nav secondary-nav">
          <li>
            <%= link_to "Dashboard", admin_products_path %>
          </li>
          <li>
            <%= link_to "Home", root_path, :target => '_blank' %>
          </li>
          <li>
          <%= link_to raw("#{content_tag(:span, 'Log Out', :class => 'label important')}"), admin_log_out_path %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="sidebar">
      <div class="well">
        <h3>Navigation</h3>
        <ul>
          <li>
            <%= link_to "Products", admin_products_path %>
          </li>
          <li>
            <%= link_to "Categories", admin_categories_path %>
          </li>
          <li>
            <%= link_to "Settings", admin_admins_path %>
          </li>
        </ul>
      </div>
    </div>
    <div class="content">
      <%= notice_message %>
      <%= yield %>
    </div>
  </div>

  <%# <footer class="footer">%>
  <%#   <div class="container">%>
  <%#     <p>2011</p>%>
  <%#   </div>%>
  <%# </footer>%>

</body>
</html>

